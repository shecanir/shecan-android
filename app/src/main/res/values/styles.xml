<resources>
    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorIcons">@android:color/black</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
<!--        <item name="windowActionBarOverlay">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <!-- Support library compatibility -->

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorIcons">@android:color/white</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>

        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <!--        <item name="windowActionBarOverlay">true</item>-->

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">false</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeuil</item>
    </style>

    <style name="TextViewRegularStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeui</item>
    </style>

    <style name="TextViewBoldStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeuib</item>
    </style>

    <style name="TextViewLightStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeui</item>
    </style>

    <style name="TextViewSubBarStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeuil</item>
    </style>

    <style name="TextViewLogoStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">60sp</item>
        <item name="android:letterSpacing">-0.065</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="HomeImageLogoStyle">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TextViewNoticeStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Widget.NavigationView"
        parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/iran_yekan_light</item>
    </style>

    <style name="TextViewStatus" parent="TextViewRegularStyle">
        <item name="android:layout_width">115dp</item>
    </style>

    <style name="ImageViewStatus" parent="TextViewRegularStyle">
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item>

        <item name="boxStrokeColor">@color/colorStatusConnected</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>

    <style name="RoundedEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:padding">12dp</item> <!-- Padding inside EditText -->
        <item name="android:textColor">@android:color/black</item> <!-- Text color -->
        <item name="android:textColorHint">@android:color/darker_gray</item> <!-- Hint color -->
        <item name="android:textSize">16sp</item> <!-- Text size -->
    </style>

</resources>
